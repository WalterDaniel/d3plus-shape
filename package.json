{
  "name": "d3plus-shape",
  "version": "0.3.1",
  "description": "Shape drawing for javascript visualizations.",
  "main": "build/d3plus-shape.js",
  "jsnext:main": "index",
  "license": "MIT",
  "homepage": "http://www.d3plus.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3plus/d3plus-shape.git"
  },
  "keywords": [
    "shape",
    "d3",
    "d3plus",
    "data",
    "visualization"
  ],
  "author": {
    "name": "Dave Landry",
    "email": "landry.dave@gmail.com",
    "url": "http://www.dave-landry.com"
  },
  "dependencies": {
    "d3": "^3.5.6",
    "d3plus-color": "^0.2.3",
    "d3plus-text": "^0.3.1"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.1.1",
    "casperjs": "^1.1.0-beta3",
    "eslint": "^1.10.3",
    "jsdoc-to-markdown": "^1.3.3",
    "node-static": "^0.7.7",
    "nodemon": "^1.8.1",
    "phantomjs": "^1.9.19",
    "rollup": "^0.24.1",
    "rollup-plugin-babel": "^2.3.8",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-npm": "^1.4.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "pretest": "npm run make:lite && npm run make:full",
    "make:lite": "mkdir -p build && rollup -c .rollup.js",
    "make:full": "mkdir -p build && rollup -c .rollup.full.js",
    "dev": "npm run serve & nodemon --watch src/ -x \"npm run make:lite\"",
    "docs": "jsdoc2md 'src/**/*.js' -t README.hbs > README.md",
    "min:lite": "uglifyjs build/d3plus-shape.js -c -m -o build/d3plus-shape.min.js",
    "min:full": "uglifyjs build/d3plus-shape.full.js -c -m -o build/d3plus-shape.full.min.js",
    "prepublish": "npm test && npm run docs && npm run min:lite && npm run min:full && npm run zip",
    "serve": "static -p 4000",
    "test": "npm run serve & eslint index.js src/* && casperjs test ./test/browser/*.js && killall node",
    "zip": "rm -f build/d3plus-shape.zip && zip -j build/d3plus-shape.zip -- LICENSE README.md build/d3plus-shape.js build/d3plus-shape.min.js build/d3plus-shape.full.js build/d3plus-shape.full.min.js"
  }
}
