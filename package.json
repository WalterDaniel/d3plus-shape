{
  "name": "d3plus-shape",
  "version": "0.1.0",
  "description": "Shape drawing for javascript visualizations.",
  "main": "src/shape.js",
  "license": "MIT",
  "homepage": "http://www.d3plus.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3plus/d3plus-shape.git"
  },
  "keywords": [
    "shape",
    "d3",
    "d3plus",
    "data",
    "visualization"
  ],
  "author": {
    "name": "Dave Landry",
    "email": "landry.dave@gmail.com",
    "url": "http://www.dave-landry.com"
  },
  "dependencies": {
    "babelify": "^6.1.3",
    "d3": "^3.5.6",
    "require-globify": "^1.2.1"
  },
  "devDependencies": {
    "babel": "^5.8.5",
    "babel-eslint": "^3.1.26",
    "browserify": "^11.0.0",
    "casperjs": "^1.1.0-beta3",
    "eslint": "^0.24.1",
    "jsdoc-to-markdown": "^1.1.1",
    "livereloadify": "^2.0.0",
    "node-static": "^0.7.7",
    "phantomjs": "^1.9.18",
    "uglifyify": "^3.0.1",
    "watchify": "^3.3.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "require-globify"
    ]
  },
  "scripts": {
    "build": "npm test & npm run docs & browserify src/shape.js > build/d3plus-shape.js & browserify -g uglifyify src/shape.js > build/d3plus-shape-min.js",
    "dev": "npm run watch & livereloadify / & npm run serve",
    "docs": "jsdoc2md 'src/**/*.js' -t README.hbs > README.md",
    "lint": "eslint src/* test/**/*.js",
    "serve": "static -p 4000",
    "test": "npm run serve & npm run lint && casperjs test ./test/**/*.js",
    "watch": "watchify -d -r ./src/shape.js:d3plus-shape -o build/d3plus-shape-dev.js -v"
  }
}
